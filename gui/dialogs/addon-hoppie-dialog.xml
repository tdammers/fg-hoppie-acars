<?xml version="1.0" encoding="UTF-8"?>
<PropertyList>
    <name>addon-hoppie-dialog</name>
    <layout>vbox</layout>
	<width>600</width>

	<group>
		<layout>hbox</layout>
		<empty>
			<stretch>1</stretch>
		</empty>
		<text>
			<label>Hoppie ACARS</label>
		</text>
		<empty>
			<stretch>1</stretch>
		</empty>
		<button>
			<pref-width>16</pref-width>
			<pref-height>16</pref-height>
			<legend></legend>
			<keynum>27</keynum>
			<border>2</border>
			<binding>
				<command>dialog-close</command>
			</binding>
		</button>
	</group>
	<hrule />
    <group>
		<layout>hbox</layout>
        <halign>left</halign>
        <button>
            <halign>left</halign>
            <legend>Start</legend>
            <binding>
                <command>nasal</command>
                <script>globals.acars.start();</script>
            </binding>
        </button>
        <button>
            <halign>left</halign>
            <legend>Stop</legend>
            <binding>
                <command>nasal</command>
                <script>globals.acars.stop();</script>
            </binding>
        </button>

        <text>
            <property>/hoppie/status-text</property>
            <pref-width>100</pref-width>
            <live>true</live>
        </text>

        <button>
            <halign>right</halign>
            <legend>Reload Addon</legend>
            <binding>
                <command>addon-reload</command>
                <id>nl.tobiasdammers.fg-hoppie-acars</id>
            </binding>
        </button> 
        <empty/>
    </group>
	<hrule />
    <textbox>
        <halign>fill</halign>
        <valign>fill</valign>
        <stretch>true</stretch>
        <pref-width>350</pref-width>
        <pref-height>150</pref-height>
        <padding>5</padding>
        <slider>20</slider>
        <live>true</live>
        <wrap>true</wrap>
        <editable>false</editable>
        <top-line>-4</top-line>
        <property>/hoppie/formatted-log</property>
    </textbox>
    <button>
        <legend>Clear</legend>
        <halign>right</halign>
        <binding>
            <command>nasal</command>
            <script>globals.acars.clearMessages();</script>
        </binding>
    </button>

    <text>
		<label>RAW ACARS</label>
	</text>
    <hrule />
	<group n="100">
		<layout>table</layout>
        <text>
            <label>FROM</label>
            <halign>left</halign>
            <row>0</row>
            <col>0</col>
        </text>
        <text>
            <label>TO</label>
            <halign>left</halign>
            <row>0</row>
            <col>1</col>
        </text>
        <text>
            <label>TYPE</label>
            <halign>left</halign>
            <row>0</row>
            <col>2</col>
        </text>
        <text>
            <label>MESSAGE</label>
            <halign>left</halign>
            <row>0</row>
            <col>3</col>
        </text>

        <text>
            <property>/sim/multiplay/callsign</property>
            <halign>left</halign>
            <row>1</row>
            <col>0</col>
        </text>
        <input>
            <width>100</width>
            <halign>left</halign>
            <property>/hoppie/dialog/to</property>
            <name>to</name>
            <row>1</row>
            <col>1</col>
        </input>
        <combo>
            <property>/hoppie/dialog/type</property>
            <name>type</name>
            <halign>left</halign>
            <value>telex</value>
            <value>progress</value>
            <value>position</value>
            <value>datareq</value>
            <value>inforeq</value>
            <value>cpdlc</value>
            <row>1</row>
            <col>2</col>
        </combo>
        <input>
            <pref-width>200</pref-width>
            <halign>left</halign>
            <property>/hoppie/dialog/message</property>
            <name>message</name>
            <row>1</row>
            <col>3</col>
        </input>
        <button>
            <legend>Send</legend>
            <binding>
                <command>dialog-apply</command>
                <object-name>to</object-name>
            </binding>
            <binding>
                <command>dialog-apply</command>
                <object-name>message</object-name>
            </binding>
            <binding>
                <command>dialog-apply</command>
                <object-name>type</object-name>
            </binding>
            <binding>
                <command>nasal</command>
                <script><![CDATA[
                    var to = string.uc(getprop('/hoppie/dialog/to'));
                    var message = string.uc(getprop('/hoppie/dialog/message'));
                    var type = string.lc(getprop('/hoppie/dialog/type'));
                    acars.send(to, type, message);
                ]]></script>
            </binding>
            <row>1</row>
            <col>4</col>
        </button>
    </group>

    <hrule/>
            
	<button>
		<legend>Close</legend>
		<binding>
			<command>dialog-close</command>
		</binding>
	</button>
</PropertyList>
