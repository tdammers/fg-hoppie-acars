<?xml version="1.0" encoding="UTF-8"?>
<PropertyList>
    <meta>
        <file-type type="string">FlightGear add-on menu bar items</file-type>
        <format-version type="int">1</format-version>
    </meta>
    <menubar-items>
        <menu>
            <label>ACARS</label>
            <enabled type="bool">true</enabled>
            
            <item>
                <label>Hoppie ACARS</label>
                <binding>
                    <command>dialog-show</command>
                    <dialog-name>addon-hoppie-dialog</dialog-name>
                </binding>
            </item>
            
            <item>
                <label>Reload Hoppie Addon</label>
                <binding>
                    <command>addon-reload</command>
                    <id>nl.tobiasdammers.fg-hoppie-acars</id>
                </binding>
            </item> 
            
        </menu>
    </menubar-items>
</PropertyList>
